<!DOCTYPE html>
<html lang="fi">
<head>
  <meta charset="UTF-8" />
  <title>Wavelength Moninpeli</title>
  <style>
    body {
      margin: 0; padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background: radial-gradient(circle at top, #8ec5fc 0%, #e0c3fc 100%);
      min-height: 100vh;
      display: flex; align-items: center; justify-content: center;
    }
    .container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
      padding: 30px;
      max-width: 700px;
      width: 100%;
      text-align: center;
    }
    button {
      background: linear-gradient(90deg, #ff8a00, #e52e71);
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s;
      margin-top: 15px;
    }
    button:hover {
      background: linear-gradient(90deg, #e52e71, #ff8a00);
    }
    input {
      padding: 10px;
      width: 70%;
      border-radius: 10px;
      border: 1px solid #ccc;
      font-size: 1rem;
      margin-top: 15px;
    }
    ul {
      list-style: none; padding: 0; margin-top: 10px; text-align: left;
      max-height: 150px; overflow-y: auto;
    }
    li {
      margin: 5px 0; font-weight: 600;
    }
    #countdown {
      font-size: 3rem;
      font-weight: bold;
      margin: 20px 0;
      color: #e52e71;
    }
  </style>
</head>
<body>
  <div class="container">

    <div id="join-screen">
      <h2>Liity peliin</h2>
      <input type="text" id="player-name" placeholder="Kirjoita nimesi" />
      <br/>
      <button onclick="joinGame()">Liity</button>

      <h3>Liittyneet pelaajat:</h3>
      <ul id="players-list"></ul>

      <button id="start-game-btn" class="hidden" onclick="startCountdown()">Aloita peli</button>
    </div>

    <div id="countdown-screen" class="hidden">
      <div id="countdown">3</div>
      <div>Peli alkaa!</div>
    </div>

    <div id="game-screen" class="hidden">
      <h1>Wavelength - Peli käynnissä</h1>
      <!-- Pelin sisältö tähän -->
      <p>Tässä on peli käynnissä...</p>
    </div>

  </div>

<script>
  const players = [];
  const playersList = document.getElementById("players-list");
  const startGameBtn = document.getElementById("start-game-btn");

  let gameStarted = false;

  function joinGame() {
    if(gameStarted) {
      alert("Peli on jo käynnissä, odota seuraavaa kierrosta.");
      return;
    }
    const input = document.getElementById("player-name");
    const name = input.value.trim();
    if (!name) {
      alert("Kirjoita nimesi!");
      return;
    }
    if (players.includes(name)) {
      alert("Nimi on jo käytössä.");
      return;
    }
    players.push(name);
    input.value = "";
    renderPlayers();
    checkStartButton();
  }

  function renderPlayers() {
    playersList.innerHTML = "";
    players.forEach((p, i) => {
      const li = document.createElement("li");
      li.textContent = p + (i === 0 ? " (host)" : "");
      playersList.appendChild(li);
    });
  }

  function checkStartButton() {
    if (players.length >= 1 && !gameStarted) {
      startGameBtn.classList.remove("hidden");
    } else {
      startGameBtn.classList.add("hidden");
    }
  }

  function startCountdown() {
    gameStarted = true;
    startGameBtn.classList.add("hidden");
    document.getElementById("join-screen").classList.add("hidden");
    document.getElementById("countdown-screen").classList.remove("hidden");

    let count = 3;
    const countdownEl = document.getElementById("countdown");
    countdownEl.textContent = count;

    const interval = setInterval(() => {
      count--;
      if (count === 0) {
        clearInterval(interval);
        // Siirrytään pelinäkymään
        document.getElementById("countdown-screen").classList.add("hidden");
        document.getElementById("game-screen").classList.remove("hidden");
        startGame(); // käynnistä pelin logiikka
      } else {
        countdownEl.textContent = count;
      }
    }, 1000);
  }

  function startGame() {
    console.log("Peli käynnistyy pelaajilla:", players);
    // Tässä voit laittaa pelin logiikan käynnistyksen
  }
</script>
</body>
</html>
